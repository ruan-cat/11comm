{
	"name": "@01s-11comm/root",
	"private": true,
	"version": "0.0.0",
	"author": "01s",
	"license": "ISC",
	"description": "01s-11comm智慧社区 monorepo根目录",
	"main": "index.js",
	"type": "module",
	"packageManager": "pnpm@10.13.1",
	"engines": {
		"node": ">=22.14.0"
	},
	"scripts": {
		"build": "turbo build",
		"up-taze": "pnpm -w up @ruan-cat/taze-config -L && npx taze -r",
		"git:dev-2-main": "git rebase dev main && pnpm run git:push",
		"git:main-2-dev": "git rebase main dev",
		"changeset:add": "changeset add",
		"changeset:version": "changeset version && changeset tag",
		"build:docs": "turbo build:docs",
		"test": "vitest --ui --watch --api.port=4000",
		"format": "pnpm -r format",
		"create-code-workspace": "tsx ./scripts/generate.code-workspace.ts --name=11comm智慧社区-前端工作区",
		"deploy:turbo": "turbo deploy",
		"deploy": "dotenvx run -f apps/admin/.env.production -f .env -- tsx ./scripts/deploy.ts",
		"not-use-in-cloudflare-worker-preinstall": "npm run corepack:pnpm && npx only-allow pnpm",
		"corepack:pnpm": "corepack enable && corepack install",
		"clear": "pnpm run clear:deps && pnpm run clear:cache",
		"clear:deps": "rimraf -g '**/{node_modules,package-lock.json,pnpm-lock.yaml}'",
		"clear:cache": "rimraf -g '**/{dist,.turbo,.vercel,.cache,.temp}'",
		"changeset:init": "changeset init",
		"changeset:publish": "changeset publish",
		"turbo:publish": "turbo do-publish",
		"git:push": "git push --follow-tags",
		"git:fetch": "git fetch -p",
		"commit": "git-cz",
		"build:admin": "pnpm -F=@01s-11comm/admin build",
		"format:*": "prettier --write . --ignore-path ./.config/.prettierignore --ignore-path .gitignore"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"@tailwindcss/oxide",
			"core-js",
			"core-js-pure",
			"es5-ext",
			"esbuild",
			"typeit",
			"vue-demi",
			"vue3-danmaku"
		]
	},
	"devDependencies": {
		"@antfu/eslint-config": "^4.19.0",
		"@changesets/cli": "^2.29.5",
		"@dotenvx/dotenvx": "^1.48.3",
		"@plus-pro-components/resolver": "^0.0.3",
		"@ruan-cat/commitlint-config": "^1.3.1",
		"@ruan-cat/domains": "^0.8.2",
		"@ruan-cat/generate-code-workspace": "^0.4.13",
		"@ruan-cat/taze-config": "^0.2.0",
		"@ruan-cat/utils": "^4.9.1",
		"@ruan-cat/vercel-deploy-tool": "^0.10.0",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/js-yaml": "^4.0.9",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^24.1.0",
		"@vitest/ui": "^3.2.4",
		"commander": "^14.0.0",
		"commitizen": "^4.3.1",
		"consola": "^3.4.2",
		"cross-env": "^7.0.3",
		"cz-git": "^1.12.0",
		"del": "^8.0.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-config-turbo": "^2.5.5",
		"eslint-plugin-prettier": "^5.5.3",
		"js-yaml": "^4.1.0",
		"lodash-es": "^4.17.21",
		"only-allow": "^1.2.1",
		"pkg-types": "^2.2.0",
		"prettier": "^3.6.2",
		"prettier-plugin-lint-md": "^1.0.1",
		"rimraf": "^6.0.1",
		"taze": "^19.1.0",
		"tsx": "^4.20.3",
		"turbo": "^2.5.5",
		"type-fest": "^4.41.0",
		"type-plus": "^7.6.2",
		"typescript": "^5.8.3",
		"typescript-lodash": "^0.2.2",
		"vercel": "^44.6.3",
		"vite": "^6.3.5",
		"vitest": "^3.2.4",
		"vue": "^3.5.18",
		"vue-tsc": "^2.2.12"
	}
}
